{
    "compilerOptions": {
        "target": "es2017",
        "lib": [
            "es2017",
            "dom"
        ],
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,
        "declaration": true,
        "strict": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "ts-node": {
        "transpileOnly": true,
        "transpiler": "ts-node/transpilers/swc-experimental"
    },
    "files": [
        "./node_modules/@types/node/index.d.ts"
    ],
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "src/**/__tests__/*"
    ]
}
